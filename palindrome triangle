n=int(input("Enter a number"))
a=1
i=0
j=1
b=1
while i<n:
    while j<(n-i):
        print(" ",end="")
        j+=1
    j=1
    while a<=(2*i+1):
        if a==1:
            print(b,end="")
        elif a>1 and a<=(i+1):
            b+=1
            print(b,end="")
        elif a>(i+1):
            b-=1
            print(b,end="")
        a+=1
    a=1
    i+=1
    b=1
    print()


