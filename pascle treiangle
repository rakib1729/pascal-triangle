n=int(input("Enter a number"))
a=1
i=0
j=1
ncr=1
while i<n:
    while j<(n-i):
        print(" ",end="")
        j+=1
    j=1
    while a<=(i+1):
        if a==1:
            print("1 ",end="")
        else:
            ncr=int(ncr*((i-(a-1)+1)/(a-1)))
            print(ncr," ",end="")
        a+=1
    a=1
    i+=1
    ncr=1
    print()


